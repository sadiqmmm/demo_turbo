<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<div class="comments">
  <h3>Comments</h3>
  <% @project.comments.each do |comment| %>

    <div class="comment" id="<%= dom_id(comment)%>">
      <p><%= comment.body %></p>
    </div>
  <% end %>
</div>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

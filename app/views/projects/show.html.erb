<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>
<div class="comments">
  <h3>Comments</h3>
  <%= turbo_stream_from @project, :comments %>
  <div id="<%= "#{dom_id(@project)}_comments" %>">
    <%= render @project.comments.order(created_at: :desc) %>
  </div>
</div>
<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
